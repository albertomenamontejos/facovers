<nav class="nav">
    <div class="logo">
        <a href="{{  path('homepage') }}">
            <img src="{{ asset('assets/img/logo.png') }}" alt="">
        </a>
    </div>
    <div class="caja-busqueda">
        <input type="hidden" name="uri" value="{{ app.request.requestUri }}">
        {% if app.request.requestUri == '/' or
            app.request.requestUri == '/explorar/'  %}
        <div class="input-busqueda">
                <span class="icon"><i class="fa fa-search"></i></span>
                <input type="search" id="search" placeholder="Buscar cancion, artista, @usuario, #hashtag">
                <button class="btn-search" id="btn_search">Buscar</button>
        </div>
        {% endif %}

    </div>
    {% if app.user.id is defined  %}
    <div class="notifications">
        <a href="{{ path('notificaciones') }}">
            <i class="icon-notification"></i>
            <div class="number-notifications">5</div>
        </a>
    </div>
    {% endif %}
</nav>
