{% extends 'front/layout/simple_layout.html.twig' %}
{% block section %}
    <div class="pagina-login" >

    <div class="form">

            <form action="{{ path('login') }}" method="post" clasS="formulario">
                <div class="inicio_sesion">
                    <div class="capa">
                        <div class="botones">
                            <a href="{{ path('user_registration') }}">
                                <div class="btn">
                                    Registrate
                                </div>
                            </a>
                            <a href="{{ path('login') }}">
                                <div class="btn">
                                    Iniciar sesion
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Nombre de usuario"/>
                <input type="password" id="password" name="_password" placeholder="Introduce su contraseña"/>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button type="submit">Iniciar sesión</button>
                <div class="errores">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>
            </form>
        </div>
    <div>

{% endblock %}